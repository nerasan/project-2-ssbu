<h2>editing match <%= match.id %></h2>

<div class="match-container">
    <div class="match-details">
        <div class="match-results">
            <img src="<%= match.character.icon %>" width=100> <%= match.character.name %> <span><%= match.result.toUpperCase() %><br></span>
        </div>
    </div>
</div>

<!-- sorting characters alphabetically -->
<% allCharacters.sort(function(a, b) { %>
    <% if(a.name < b.name) return -1 %>
    <% if(a.name > b.name) return 1 %>
    <% return 0 %>
<% }) %>

<h4>edit match details</h4>

<form action="/matches/<%= matchIndex %>?_method=PUT" method="POST">
    <div class="form-group">
      <input hidden type="user" name="userId" value="<%= currentUser.id %>">
    </div>
    <div class="form-group">
        <label for="character">character</label>
        <select name="characterId" id="character" class="form-control" required>
            <option selected="selected" value="<%= match.characterId %>"><%= character.name %></option>
            <% allCharacters.forEach(function(allChar) { %>
                <option value="<%= allChar.id %>"><%= allChar.name %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="result">match result</label>
        <select name="result" id="result" class="form-control" required>
            <option selected="selected"><%= match.result %></option>
            <% if (match.result === "win") { %>
                <option value="lose">lose</option>
            <% } else { %>
                <option value="win">win</option>
            <% } %>
        </select>
    </div>
    <input type="submit" class="btn">
  </form>

