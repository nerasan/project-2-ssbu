<h2>edit profile: <%= currentUser.name %></h2>

<h4>account details</h4>
<ul>
    <li>username: <%= currentUser.name %> <span class="uid">(user id: #<%= currentUser.id %>)</span></li>
    <li>email: <%= currentUser.email %></li>
</ul>

<h4>profile details</h4>

<form action="/profile" method="POST">
    <div class="form-group">
      <input hidden type="user" name="userId" value="<%= currentUser.id %>">
    </div>

    <div class="form-group">
        <input hidden type="email" name="email" id="new-email" value="<%= currentUser.email %>">
    </div>

    <div class="form-group">
        <label for="switchCode">switch code:</label>
        <input type="text" name="switchCode" id="switchCode" value="<%= currentUser.switchCode %>">
    </div>

    <div class="form-group">
        <label for="about">about:</label>
        <input type="text" name="about" id="about" class="edit-about" value="<%= currentUser.about %>">
    </div>

    <input type="submit" class="btn">

  </form>